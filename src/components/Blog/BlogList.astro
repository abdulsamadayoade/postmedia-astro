<style lang="scss">
    .blog {
        &__inner {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10rem 4rem;
        }

        img {
            border-radius: 2rem;
            display: block;
            margin-bottom: 3rem;
            height: 45rem;
            object-fit: cover;
        }

        a {
            color: var(--black-color);

            >div {
                display: flex;
                flex-direction: column;
            }

            p:first-of-type {
                font-size: 3rem;
                font-weight: 500;
                font-family: var(--heading-font);
                margin-bottom: 3rem;
            }
        }

        .read-more {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 500;
            margin-top: 3rem;
            border: 1px solid var(--blue-primary-color);
            border-radius: 5rem;
            padding: .5rem 1rem;
            text-transform: uppercase;
            font-size: 1.3rem;
            letter-spacing: 1px;
            color: var(--blue-primary-color);

            span:last-child {
                width: 2.5rem;
                height: 2.5rem;
                border-radius: 50%;
                background-color: var(--blue-primary-color);
                display: flex;
                justify-content: center;
                align-items: center;
                overflow: hidden;
                transition: all .5s cubic-bezier(.4, 0, .2, 1);
            }

            svg {
                transition: all .5s cubic-bezier(.4, 0, .2, 1);
            }

            &:hover {
                svg {
                    transform: translate3d(15px, -15px, 0);
                }

                span:last-child {
                    opacity: 0;
                }
            }
        }
    }
</style>