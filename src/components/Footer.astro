<style lang="scss">
    footer {
        padding: 5rem 0;
    }

    .button {
        span {
            margin-right: 1rem;
        }

        &:hover {
            svg {
                fill: #ffffff;
            }
        }
    }

    svg {
        width: 2rem;
        fill: #152766;
        transition: var(--transition);
    }

    a:not(:last-child) {
        margin-right: 1rem;
    }

    .top-section,
    .bottom-section {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .top-section {
        >div {
            width: 48%;
        }

        &__links {
            display: flex;
            margin-top: 2rem;
        }

        &__header {
            border-top: 1px solid var(--blue-primary-color);
            padding-top: 1rem;
            display: flex;
            align-items: center;

            span {
                text-transform: uppercase;
                font-size: 1.4rem;
                letter-spacing: 2px;
                font-weight: 600;
                color: var(--blue-primary-color);
            }

            div {
                width: 1rem;
                height: 1rem;
                border-radius: 50%;
                background-color: var(--red-color);
                margin-right: 1rem;
            }
        }
    }

    .bottom-section {
        margin-top: 8rem;
        border-top: 1px solid var(--blue-primary-color);
        padding-top: 2rem;
        align-items: center;

        >div {
            width: 33.33%;
        }

        &__links {
            padding-right: 15rem;

            a:last-child {
                margin-top: 1rem;
            }
        }

        &__logo {
            display: flex;
            jutify-content: center;
            align-items: center;
            flex-direction: column;

            img {
                width: 20rem;
                margin: 0 auto;
            }

            p {
                font-size: 1.3rem;
                text-transform: uppercase;
                color: var(--blue-primary-color);

                &:last-of-type {
                    margin-top: 3px;
                }
            }
        }

        &__toTop {
            display: flex;
            align-items: center;
            justify-content: center;

            a {
                width: 12rem;
                height: 12rem;
                display: flex;
                justify-content: center;
                align-items: center;
                border-radius: 50%;
                border: 1px solid var(--blue-primary-color);
                cursor: pointer;
            }
        }

    }

    .dev-section {
        display: flex;
        justify-content: flex-end;
        margin-top: 5rem;

        a {
            text-transform: uppercase;
            font-size: 1.2rem;
            color: var(--red-color);
            font-weight: 500;
            text-decoration: underline;
        }
    }
</style>